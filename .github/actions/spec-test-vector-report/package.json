{
  "name": "spec-test-vector-report-action",
  "description": "Manage TBD Test Vector Reports",
  "version": "0.0.0",
  "author": "",
  "private": true,
  "license": "Apache-2.0",
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "package": "npx ncc build index.js -o dist --source-map --license licenses.txt",
    "package:watch": "npm run package -- --watch"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@actions/glob": "^0.4.0",
    "junit2json": "^3.1.11",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@vercel/ncc": "^0.38.1"
  }
}
