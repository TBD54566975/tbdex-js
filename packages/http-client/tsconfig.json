{
  "compilerOptions": {
    "strict": false,
    "lib": ["DOM","es2023"],
    "rootDir": "./",
    "allowJs": true,
    "target": "es2022",
    "module": "nodenext",
    "outDir": "dist/esm",
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/types",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}