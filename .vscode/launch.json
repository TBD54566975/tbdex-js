{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Tests - protocol",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/mocha",
            "runtimeArgs": [
                "packages/protocol/tests/compiled/**/*.spec.js"
            ],
            "console": "internalConsole",
            "env": {
                "PATH": "${workspaceRoot}/bin:${env:PATH}"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Tests - http-client",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/mocha",
            "runtimeArgs": [
                "packages/http-client/tests/compiled/**/*.spec.js"
            ],
            "console": "internalConsole",
            "env": {
                "PATH": "${workspaceRoot}/bin:${env:PATH}"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Tests - http-server",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/mocha",
            "runtimeArgs": [
                "packages/http-server/tests/compiled/**/*.spec.js"
            ],
            "console": "internalConsole",
            "env": {
                "PATH": "${workspaceRoot}/bin:${env:PATH}"
            }
        }
    ]
}
